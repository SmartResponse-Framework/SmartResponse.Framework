<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LRMod Setup" Height="209" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Margin="4">
            <TextBlock FontSize="10">Platform Manager</TextBlock>
            <TextBox Name="MyTextBox" />
            <TextBlock FontSize="10">LogRhythm API Key</TextBlock>
            <PasswordBox Height="60" Margin="0px 0px 0px 10px" />
            <Button Width="100" HorizontalAlignment="Center">Install</Button>
        </StackPanel>
    </Grid>

</Window>